{{!-- Previous/next page links - only displayed on page 2+ --}}
{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
	<article class="index-post-block">
		<header>
			<h3 class="post-title"><a href="{{url}}">{{title}}</a></h3>
			<p class="index-post-author">
			Creator : <a href="/author/{{author.slug}}">{{author.name}}</a>{{#if author.website}}<a href="{{author.website}}"><i class="fa fa-external-link" aria-hidden="true"></i></a>{{/if}}</a>
			&nbsp;&nbsp;
			{{#if tags}}Tags : <a href="">{{tags prefix=": "}}</a>&nbsp;{{/if}}
			</p>
		</header>	
		<section class="index-post-demo">
			<p>{{excerpt words="26"}}</p>
		</section>
		<footer>
			<time class="index-post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
		</footer>
	</article>
{{/foreach}}