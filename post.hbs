{{!< default}}
<div class="col-md-12 post-page">
{{#post}}
	<article class="post-page-main">
		<header style="color: #ccc;">
			<h3 style="text-align: left; display: inline; margin-right: 10px;">{{title}}</h3>
			<p style="text-align: right; display: inline;">{{author.name}}{{#if author.website}}<a href="{{author.website}}"><i class="fa fa-external-link" aria-hidden="true"></i></a>{{/if}}</a><time style="margin-left: 5px;" class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="YYYY-MM-DD"}}</time></p>
			<hr>
		</header>
		<section>
			{{content}}
		</section>
		<footer>
			<hr>
		</footer>
	</article>

