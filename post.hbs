	<div class="post-page-author">
		{{#author}}
		<h3>Author Info - {{name}}</h3>
		<hr>
		<img src="{{image}}" alt="Author's Profile Image" />
		{{#if bio}}<p class="author-bio">{{bio}}</p>{{#else}}<p class="author-bio">This Author Dosn't have own Bio.</p>{{/if}}
		{{/author}}
	</div>
	<div class="post-page-readmore">
	<!-- TODO:Random Page -->
		<h3>Other Posts</h3>
		<hr>
		{{#next_post}}
			<p>Last one : <a href="{{url}}">{{title}}</a></p>
		{{/next_post}}
		{{#prev_post}}
			<p>Next article : <a href="{{url}}">{{title}}</a></p>
		{{/prev_post}}
	</div>
	<div class="post-page-ad">
		<h3>Ad for Server Price</h3>
		<hr>
		<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
		<!-- Komi -->
		<ins class="adsbygoogle" style="display:inline-block;width:100%;height:90px" data-ad-client="ca-pub-6081569795236180" data-ad-slot="4242039759"></ins>
		<script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
	</div>
</div>
{{/post}}
					
